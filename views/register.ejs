<% layout('layout') -%>
<h2>Register</h2>
<form method="POST" action="/auth/register">
  <div>
    <label>Name</label>
    <input name="name" type="text" />
  </div>
  <div>
    <label>Email</label>
    <input name="email" type="email" required />
  </div>
  <div>
    <label>Password</label>
    <input name="password" type="password" required />
  </div>
  <button type="submit">Register</button>
</form>
