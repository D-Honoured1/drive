<div class="dashboard-container">
    <div class="dashboard-header">
        <h2>Your Folders</h2>
        <p>Organize and manage your files with folders</p>
    </div>

    <!-- Create Folder Form -->
    <div class="create-folder-section">
        <form method="POST" action="/folders" class="folder-form">
            <div class="form-group">
                <input 
                    name="name" 
                    placeholder="New folder name" 
                    required 
                    class="folder-input"
                    maxlength="50"
                />
                <button type="submit" class="create-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"></path>
                    </svg>
                    Create Folder
                </button>
            </div>
        </form>
    </div>

    <!-- Folders List -->
    <div class="folders-section">
        <% if (folders && folders.length > 0) { %>
            <div class="folders-grid">
                <% folders.forEach(function(folder) { %>
                    <div class="folder-card">
                        <div class="folder-icon">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"></path>
                            </svg>
                        </div>
                        
                        <div class="folder-info">
                            <h3 class="folder-name">
                                <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
                            </h3>
                            <p class="folder-meta">
                                <%= folder.fileCount || 0 %> files
                                <span class="folder-date">
                                    â€¢ Updated <%= new Date(folder.updatedAt).toLocaleDateString() %>
                                </span>
                            </p>
                        </div>
                        
                        <div class="folder-actions">
                            <form method="post" action="/folders/<%= folder.id %>/delete" 
                                  onsubmit="return confirm('Are you sure you want to delete this folder and all its files?')" 
                                  style="display:inline">
                                <button type="submit" class="delete-btn" title="Delete folder">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3,6 5,6 21,6"></polyline>
                                        <path d="M19,6v14a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6m3,0V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"></path>
                                        <line x1="10" y1="11" x2="10" y2="17"></line>
                                        <line x1="14" y1="11" x2="14" y2="17"></line>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"></path>
                    </svg>
                </div>
                <h3>No folders yet</h3>
                <p>Create your first folder to start organizing your files</p>
            </div>
        <% } %>
    </div>
</div>
