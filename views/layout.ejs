<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' - ' + title : title %></title>
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="/css/main.css">
    
    <!-- Page-specific CSS -->
    <% if (typeof pageCSS !== 'undefined') { %>
        <link rel="stylesheet" href="<%= pageCSS %>">
    <% } %>
</head>
<body>
    <!-- Navigation (if user is logged in) -->
    <% if (user) { %>
        <nav class="navbar">
            <div class="nav-container">
                <a href="/dashboard" class="nav-brand">Drive App</a>
                <div class="nav-links">
                    <a href="/dashboard">Dashboard</a>
                    <form method="POST" action="/auth/logout" style="display: inline;">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    <% } %>

    <!-- Flash Messages -->
    <% if (error && error.length > 0) { %>
        <div class="flash-container">
            <% error.forEach(function(msg) { %>
                <div class="alert alert-error">
                    <%= msg %>
                </div>
            <% }); %>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="flash-container">
            <% success.forEach(function(msg) { %>
                <div class="alert alert-success">
                    <%= msg %>
                </div>
            <% }); %>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Global JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Page-specific JavaScript -->
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="<%= pageScript %>"></script>
    <% } %>

    <!-- Multiple page scripts support -->
    <% if (typeof pageScripts !== 'undefined' && Array.isArray(pageScripts)) { %>
        <% pageScripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>