<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Drive App' %></title>
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Page-specific CSS -->
    <% if (pageCSS) { %>
        <link rel="stylesheet" href="<%= pageCSS %>">
    <% } %>
</head>
<body>
    <!-- Navigation -->
    <% if (user) { %>
    <header class="navbar">
        <div class="nav-container">
            <a href="/dashboard" class="nav-brand">Drive App</a>
            <div class="nav-links">
                <span>Welcome, <%= user.name || user.email %></span>
                <form method="POST" action="/auth/logout" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>
    <% } %>

    <!-- Flash Messages -->
    <div class="flash-container">
        <% if (error && error.length > 0) { %>
            <% error.forEach(function(msg) { %>
                <div class="alert alert-error">
                    <svg class="alert-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                    </svg>
                    <%= msg %>
                </div>
            <% }); %>
        <% } %>

        <% if (success && success.length > 0) { %>
            <% success.forEach(function(msg) { %>
                <div class="alert alert-success">
                    <svg class="alert-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="9 11l3 3l8-8"></path>
                        <path d="21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9c1.51 0 2.93.37 4.18 1.03"></path>
                    </svg>
                    <%= msg %>
                </div>
            <% }); %>
        <% } %>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Global JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Page-specific JavaScript -->
    <% if (pageScript) { %>
        <script src="<%= pageScript %>"></script>
    <% } %>
    
    <% if (pageScripts && Array.isArray(pageScripts)) { %>
        <% pageScripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
