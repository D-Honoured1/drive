<% layout('layout') -%>
<h2>Login</h2>
<form method="POST" action="/auth/login">
  <div>
    <label>Email</label>
    <input name="email" type="email" required />
  </div>
  <div>
    <label>Password</label>
    <input name="password" type="password" required />
  </div>
  <button type="submit">Login</button>
</form>
